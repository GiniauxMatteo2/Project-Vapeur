<head>
  <link rel="stylesheet" href="/css/style.css">
</head>

<h1>Liste des éditeurs</h1>
<ul>
  {{#each publishers}}
    <li>
      <a href="/publishers/game/{{this.publisher}}">{{this.publisher}}</a>
      <form action="/publishers/delete/{{this.id}}" method="POST" style="display:inline;">
        <button type="submit">Supprimer</button>
      </form>
    </li>
  {{/each}}
</ul>

<h2>Ajouter un nouvel éditeur</h2>
<form action="/publishers/new" method="POST">
  <input type="text" name="publisher" placeholder="Nom de l'éditeur" required>
  <button type="submit">Créer</button>
</form>
