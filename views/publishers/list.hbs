<head>
  <link rel="stylesheet" href="/css/style.css">
</head>

<h1>Liste des éditeurs</h1>
<ul>
  {{#each publishers}}
    <li>
      <a href="/publishers/{{this.publisher}}/games">{{this.publisher}}</a>
      <form action="/publishers/{{this.id}}/delete" method="POST" style="display:inline;">
        <button type="submit">Supprimer</button>
      </form>
      <form action="/publishers/{{this.id}}/edit" method="POST" style="display:inline;">
        <input type="text" name="publisher" value="{{this.publisher}}" required>
        <button type="submit">Modifier</button>
      </form>
    </li>
  {{/each}}
</ul>

<h2>Ajouter un nouvel éditeur</h2>
<form action="/publishers/create" method="POST">
  <input type="text" name="publisher" placeholder="Nom de l'éditeur" required>
  <button type="submit">Créer</button>
</form>
