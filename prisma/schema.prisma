generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Games {
  id              Int              @id @default(autoincrement())
  title           String
  description     String
  releaseDate     DateTime
  gameTypes       GamesTypes[]     // Relationship with GamesTypes
  gamePublishers  GamePublishers[] // Relationship with GamePublishers
}

model GamesTypes {
  gameId Int
  type   String

  game   Games @relation(fields: [gameId], references: [id]) // Relationship with Games

  @@id([gameId, type]) // Composite primary key
}

model GamePublishers {
  id        Int    @id @default(autoincrement())
  publisher String
  gameId    Int

  game Games @relation(fields: [gameId], references: [id]) // Relationship with Games
}
